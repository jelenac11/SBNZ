<?xml version="1.0" encoding="UTF-8"?>
<kmodule xmlns="http://jboss.org/kie/6.0.0/kmodule" 
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
   <kbase name="rules" packages="sbnz.integracija.rules">
        <ksession name="session" type="stateful"/>
   </kbase>
   <kbase name="cepReport" eventProcessingMode="stream" packages="sbnz.integracija.rules.cepReport">
    	<ksession name="cepReportSession" clockType="realtime"/>
        <ksession name="cepReportKsessionPseudoClock" clockType="pseudo"/>
    </kbase>
    <kbase name="cepLogin" eventProcessingMode="stream" packages="sbnz.integracija.rules.cepLogin">
    	<ksession name="cepLoginSession" clockType="realtime"/>
        <ksession name="cepLoginSessionPseudoClock" clockType="pseudo"/>
    </kbase>
    <kbase name="cepMidnight" eventProcessingMode="stream" packages="sbnz.integracija.rules.cepMidnight">
    	<ksession name="cepMidnightSession" clockType="realtime"/>
        <ksession name="cepMidnightSessionPseudoClock" clockType="pseudo"/>
    </kbase>
    <kbase name="cepAllowedToEat" eventProcessingMode="stream" packages="sbnz.integracija.rules.cepAllowedToEat">
    	<ksession name="cepAllowedToEatSession" clockType="realtime"/>
        <ksession name="cepAllowedToEatSessionPseudoClock" clockType="pseudo"/>
    </kbase>
</kmodule>
